<link rel="stylesheet" type="text/css" href="assets/css/experts.css" />
<div class="container">
    <div class="row">
        <div class="col-sm-0 col-md-2"></div>
        <div class="col-sm-12 col-md-8">
            <h1>Who knows what?</h1>
            <button id="add" class="btn btn-primary btn-lg" style="float: right; display: inline-block;" aria-label="Add" data-toggle="modal" data-target="#expert-form-modal"><span class="glypicon glyphicon-plus" aria-hidden="true"></span> Add</button>
            <table class="table">
                <thead>
                    <tr>
                        <th>Subject Matter</th>
                        <th>Expert</th>
                        <th>Actions</th>
                    </tr>
                    <tbody id="t"></tbody>
                </thead>
            </table>
        </div>
        <div class="col-sm-0 col-md-2"></div>
    </div>
</div> 


<!-- Modal -->
<div class="modal fade" id="expert-form-modal" tabindex="-1" role="dialog" aria-labelledby="expert-form" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Expert Form</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="expert-form">
            <div class="form-group">
                <label for="subjectMatter">Subject Matter</label>
                <input type="text" class="form-control" id="subject-matter" aria-describedby="subjectMatterHelp" placeholder="e.g. Word, Excel, SPSS">
                <small id="subjectMatterHelp" class="form-text text-muted">Enter topic, service or software solution</small>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" aria-describedby="nameHelp" placeholder="Joan Doe">
                <small id="snameHelp" class="form-text text-muted">Enter expert's name</small>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" id="submit">Submit</button>
      </div>
    </div>
  </div>
</div>



